<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="style-src">
            <values>
                <value id="doofinder_styles" type="host">*.doofinder.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="doofinder_src" type="host">*.doofinder.com</value>
                <value id="doofinder_wss" type="host">wss://*.doofinder.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="doofinder_script" type="host">cdn.doofinder.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="doofinder_img" type="host">cdn.doofinder.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
