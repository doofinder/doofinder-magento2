<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <doofinder_config_config>
            <doofinder_account>
                <api_key></api_key>
            </doofinder_account>
            <doofinder_search_engine>
                <hash_id></hash_id>
                <internal_search_enabled>0</internal_search_enabled>
                <page_limit>5</page_limit>
                <atomic_updates_enabled>0</atomic_updates_enabled>
                <request_limit>100</request_limit>
            </doofinder_search_engine>
            <doofinder_layer>
                <enabled>0</enabled>
                <script></script>
            </doofinder_layer>
        </doofinder_config_config>
        <doofinder_config_index>
            <feed_attributes>
                <id>df_id</id>
                <title>name</title>
                <description>short_description</description>
                <brand>manufacturer</brand>
                <categories>category_ids</categories>
                <link>url_key</link>
                <image_link>image</image_link>
                <price>df_regular_price</price>
                <sale_price>df_sale_price</sale_price>
                <mpn>sku</mpn>
                <availability>df_availability</availability>
                <additional_attributes>a:0:{}</additional_attributes>
            </feed_attributes>
            <feed_settings>
                <export_product_prices>1</export_product_prices>
                <price_tax_mode>0</price_tax_mode>
                <image_size></image_size>
                <categories_in_navigation>0</categories_in_navigation>
                <split_configurable_products>0</split_configurable_products>
            </feed_settings>
        </doofinder_config_index>
        <doofinder_config_data_feed>
            <cron_settings>
                <enabled>0</enabled>
                <start_time>0,0,0</start_time>
                <step_size>1000</step_size>
                <step_delay>5</step_delay>
                <password></password>
            </cron_settings>
            <feed_status></feed_status>
        </doofinder_config_data_feed>
        <directives>
            <df_id><![CDATA[Product Id]]></df_id>
            <df_availability><![CDATA[Product Availability]]></df_availability>
            <df_currency><![CDATA[Product Currency]]></df_currency>
            <df_regular_price><![CDATA[Product Regular Price]]></df_regular_price>
            <df_sale_price><![CDATA[Product Sale Price]]></df_sale_price>
        </directives>
    </default>
</config>
