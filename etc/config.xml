<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <doofinder_config_config>
        
            <doofinder_settings>
                <doofinder_enabled>1</doofinder_enabled>
            </doofinder_settings>

            <doofinder_account>
                <api_key></api_key>
                <management_server></management_server>
                <search_server></search_server>
            </doofinder_account>
             <doofinder_logging>
                <fullindexing_enabled>1</fullindexing_enabled>
                <doofinder_loglevel>[]</doofinder_loglevel>
             </doofinder_logging>
             

            <doofinder_search_engine>
                <hash_id></hash_id>
                <internal_search_enabled>0</internal_search_enabled>
            </doofinder_search_engine>
            <doofinder_layer>
                <enabled>0</enabled>
                <script></script>
            </doofinder_layer>
            <doofinder_banners>
                <enabled>0</enabled>
                <insertion_point>.page-title</insertion_point>
                <insertion_method>after</insertion_method>
            </doofinder_banners>
            <doofinder_stats>
                <search_product_container>.product-item</search_product_container>
                <search_product_link>.product-item-photo, .product-item-link</search_product_link>
            </doofinder_stats>
        </doofinder_config_config>
        <doofinder_config_index>
            <feed_attributes>
                <brand>manufacturer</brand>
                <image_link>image</image_link>
                <mpn>sku</mpn>
                <additional_attributes>[]</additional_attributes>
            </feed_attributes>
            <feed_settings>
                <export_product_prices>1</export_product_prices>
                <price_tax_mode>0</price_tax_mode>
                <image_size></image_size>
                <categories_in_navigation>0</categories_in_navigation>
            </feed_settings>
        </doofinder_config_index>
    </default>
</config>
