<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="doofinder_config"
            translate="label"
            sortOrder="1000">
            <label>Doofinder</label>
        </tab>
        <section id="doofinder_config_config"
                 translate="label"
                 type="text"
                 sortOrder="1"
                 showInDefault="1"
                 showInStore="1"
                 showInWebsite="1">
            <label>Configuration</label>
            <tab>doofinder_config</tab>
            <resource>Doofinder_Feed::config</resource>
            <group id="doofinder_account"
                    translate="label"
                    type="text"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="0"
                    showInStore="0">
                <label>Account</label>
                <field id="api_key"
                       translate="label"
                       type="text"
                       sortOrder="1"
                       showInDefault="1"
                       showInStore="0"
                       showInWebsite="0">
                    <label>API Key</label>
                    <backend_model>Doofinder\Feed\Model\Config\Backend\ApiKeyValidation</backend_model>
                    <comment>
                        <![CDATA[ You need a Management API Key. Search-only keys won't work. ]]>
                    </comment>
                </field>
            </group>
            <group id="doofinder_search_engine"
                    translate="label"
                    type="text"
                    sortOrder="1"
                    showInDefault="1"
                    showInWebsite="0"
                    showInStore="1">
                <label>Search Engine</label>
                <field id="enabled"
                       translate="label comment"
                       type="select"
                       sortOrder="1"
                       showInDefault="0"
                       showInStore="1"
                       showInWebsite="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[ Enable or disable indexer for this store. IMPORTANT: DISABLE ON YOUR OWN RISK! ]]>
                    </comment>
                </field>
                <field id="hash_id"
                       translate="label"
                       type="text"
                       sortOrder="1"
                       showInDefault="0"
                       showInStore="1"
                       showInWebsite="0">
                    <label>Hash Id</label>
                    <backend_model>Doofinder\Feed\Model\Config\Backend\HashIdValidation</backend_model>
                    <depends>
                        <field id="doofinder_config_config/doofinder_search_engine/enabled">1</field>
                    </depends>
                    <comment>
                        <![CDATA[ You must configure a "hashid" for each store view. ]]>
                    </comment>
                </field>
                <field id="internal_search_enabled"
                       translate="label"
                       type="note"
                       sortOrder="2"
                       showInDefault="1"
                       showInStore="0"
                       showInWebsite="0">
                    <label>Use Doofinder for Internal Search</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\InternalSearchEnabled</frontend_model>
                </field>
                <field id="page_limit"
                       translate="label"
                       type="text"
                       sortOrder="3"
                       showInDefault="1"
                       showInStore="0"
                       showInWebsite="0">
                    <label>Max requests per search</label>
                    <validate>required-entry validate-number</validate>
                    <comment>
                        <![CDATA[ Maximum number of pages obtained for a search query. Each page contains a maximum of 100 results. ]]>
                    </comment>
                </field>
            </group>
            <group id="doofinder_layer"
                   translate="label"
                   type="text"
                   sortOrder="2"
                   showInDefault="1"
                   showInWebsite="0"
                   showInStore="1">
                <label>Doofinder Layer</label>
                <field id="enabled"
                       translate="label"
                       type="select"
                       sortOrder="1"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[ Activate/deactivate the search layer. IMPORTANT: You must configure a different Layer script for each store view ]]>
                    </comment>
                </field>
                <field id="script"
                       translate="label"
                       type="textarea"
                       sortOrder="2"
                       showInDefault="0"
                       showInStore="1"
                       showInWebsite="0">
                    <label>Script</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[ Paste your integration script here. ]]>
                    </comment>
                </field>
            </group>
            <group id="doofinder_banners"
                   translate="label"
                   type="text"
                   sortOrder="2"
                   showInDefault="1"
                   showInWebsite="0"
                   showInStore="1">
                <label>Banners</label>
                <field id="enabled"
                       translate="label"
                       type="select"
                       sortOrder="1"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[ Activate/deactivate banners. Banners require proper configuration in Doofinder Management panel. ]]>
                    </comment>
                </field>
                <field id="insertion_point"
                       translate="label"
                       type="text"
                       sortOrder="1"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Insertion point</label>
                </field>
                <field id="insertion_method"
                       translate="label"
                       type="select"
                       sortOrder="1"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Insertion method</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Banner\Insertion</source_model>
                </field>
            </group>
        </section>
        <section id="doofinder_config_index"
                translate="label"
                type="text"
                sortOrder="2"
                showInDefault="1"
                showInWebsite="1"
                showInStore="1">
            <label>Index Settings</label>
            <tab>doofinder_config</tab>
            <resource>Doofinder_Feed::config</resource>
            <group id="feed_attributes"
            translate="label"
            type="text"
            sortOrder="2"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1">
                <label>Attributes</label>
                <field id="title"
                    translate="label"
                    type="select"
                    sortOrder="2"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Title</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="description"
                    translate="label"
                    type="select"
                    sortOrder="3"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Description</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="brand"
                    translate="label"
                    type="select"
                    sortOrder="4"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Brand</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="categories"
                    translate="label"
                    type="select"
                    sortOrder="5"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Categories</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="link"
                    translate="label"
                    type="select"
                    sortOrder="6"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Link</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="image_link"
                    translate="label"
                    type="select"
                    sortOrder="7"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Image link</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="price"
                    translate="label"
                    type="select"
                    sortOrder="8"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Price</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="sale_price"
                    translate="label"
                    type="select"
                    sortOrder="9"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Sale Price</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="mpn"
                    translate="label"
                    type="select"
                    sortOrder="10"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>MPN</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="availability"
                    translate="label"
                    type="select"
                    sortOrder="11"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Availability</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\Attributes</source_model>
                </field>
                <field id="additional_attributes"
                    translate="label comment"
                    sortOrder="12"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Additional Attributes</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\Map\Additional</frontend_model>
                    <backend_model>Doofinder\Feed\Model\Config\Backend\AdditionalAttributes</backend_model>
                    <comment>Field names must be in lowercase and contain no whitespaces.</comment>
                </field>
            </group>
            <group id="feed_settings"
                translate="label"
                type="text"
                sortOrder="1"
                showInDefault="1"
                showInWebsite="1"
                showInStore="1">
                <label>Settings</label>
                <field id="export_product_prices"
                    translate="label"
                    type="select"
                    sortOrder="2"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Export Product Prices</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="price_tax_mode"
                    translate="label"
                    type="select"
                    sortOrder="2"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Price Export Mode</label>
                    <source_model>Doofinder\Feed\Model\Config\Source\Feed\PriceTaxMode</source_model>
                    <comment>
                        <![CDATA[Export product price tax mode: Auto - use catalog display setting; With tax - export prices with tax; Without tax - export prices without tax.]]>
                    </comment>
                </field>
                <field id="image_size"
                    translate="label"
                    type="text"
                    sortOrder="2"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Image size</label>
                    <comment>
                        <![CDATA[Export product image with given width. Leave empty to use original size.]]>
                    </comment>
                </field>
                <field id="categories_in_navigation"
                    translate="label"
                    type="select"
                    sortOrder="10"
                    showInDefault="1"
                    showInWebsite="0"
                    showInStore="1">
                    <label>Export only categories present in navigation menus</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[Whether this option is enabled or not, only active categories will be exported.]]>
                    </comment>
                </field>
                <field id="atomic_updates_enabled"
                    translate="label"
                    type="select"
                    sortOrder="20"
                    showInDefault="1"
                    showInWebsite="0"
                    showInStore="1">
                    <label>Update products on save</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\AtomicUpdates</frontend_model>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[Requires a Management API key configured in Search Configuration.]]>
                    </comment>
                </field>
                <field id="cron_updates_enabled"
                    translate="label comment"
                    type="select"
                    sortOrder="20"
                    showInDefault="1"
                    showInWebsite="0"
                    showInStore="1">
                    <label>Delayed product updates</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\DelayedUpdates</frontend_model>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[Recommended for big stores with frequent product updates. Indices won't be refreshed immediately after saving a product, but after a short period of time, saving requests to Doofinder servers. Requires Doofinder set as Magento's internal search engine.]]>
                    </comment>
                </field>
            </group>
        </section>
        <section id="doofinder_config_data_feed"
            translate="label"
            type="text"
            sortOrder="3"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1">
            <label>Data Feed (legacy)</label>
            <tab>doofinder_config</tab>
            <resource>Doofinder_Feed::config</resource>
            <group id="cron_settings"
                   translate="label"
                   type="text"
                   sortOrder="3"
                   showInDefault="1"
                   showInStore="1"
                   showInWebsite="1">
                <label>Cron Settings</label>
                <comment>
                    <![CDATA[Allows generating the data feed in a daily basis. If you're using internal search you don't need Cron. Data is indexed automatically via API.]]>
                </comment>
                <field id="enabled"
                       translate="label"
                       type="select"
                       sortOrder="1"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[ Activate/deactivate the feed for this store ]]>
                    </comment>
                </field>
                <field id="start_time"
                       translate="label"
                       type="time"
                       sortOrder="2"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Feed generation start time</label>
                    <backend_model>Doofinder\Feed\Model\Config\Backend\StartTime</backend_model>
                    <comment>
                        <![CDATA[ The time at which the feed generation starts.]]>
                    </comment>
                </field>
                <field id="step_size"
                       translate="label"
                       type="text"
                       sortOrder="4"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Step size</label>
                    <comment>
                        <![CDATA[
                        The maximum number of products added to the feed on each iteration of the generation process (maximum recommended value: 1000)
                        ]]>
                    </comment>
                </field>
                <field id="step_delay"
                       translate="label"
                       type="text"
                       sortOrder="3"
                       showInDefault="1"
                       showInStore="1"
                       showInWebsite="1">
                    <label>Step delay</label>
                    <comment>
                        <![CDATA[
                         The interval (in minutes) between subsequent stages of the feed generation process.
                         It should not be smaller than the frequency of execution of your cron.sh file.
                         ]]>
                    </comment>
                </field>
                <field id="generate"
                       translate="button_label"
                       sortOrder="62"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <button_label>Start Feed Generation Now</button_label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\GenerateButton</frontend_model>
                </field>
                <field id="password"
                    translate="label"
                    type="text"
                    sortOrder="6"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">
                    <label>Security Phrase</label>
                    <backend_model>Doofinder\Feed\Model\Config\Backend\Password</backend_model>
                    <comment>
                        <![CDATA[Protect feed with given phrase.]]>
                    </comment>
                </field>
            </group>
            <group id="feed_status"
                translate="label"
                type="text"
                sortOrder="20"
                showInDefault="1"
                showInWebsite="0"
                showInStore="1">
                <label>Feed Status</label>
                <field id="dynamic_feed_url"
                       translate="label"
                       type="note"
                       sortOrder="5"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0">
                    <label>Dynamic feed URL</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\Panel\DynamicFeedUrl</frontend_model>
                </field>
                <field id="status"
                       translate="label"
                       type="note"
                       sortOrder="10"
                       showInDefault="0"
                       showInWebsite="0"
                       showInStore="1">
                    <label>Status</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\Panel\CronField</frontend_model>
                </field>
                <field id="message"
                       translate="label"
                       type="note"
                       sortOrder="15"
                       showInDefault="0"
                       showInWebsite="0"
                       showInStore="1">
                    <label>Message</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\Panel\CronField</frontend_model>
                </field>
                <field id="complete"
                       translate="label"
                       type="note"
                       sortOrder="20"
                       showInDefault="0"
                       showInWebsite="0"
                       showInStore="1">
                    <label>Complete</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\Panel\CronField</frontend_model>
                </field>
                <field id="next_run"
                       translate="label"
                       type="note"
                       sortOrder="25"
                       showInDefault="0"
                       showInWebsite="0"
                       showInStore="1">
                    <label>Next Run</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\Panel\CronField</frontend_model>
                </field>
                <field id="next_iteration"
                       translate="label"
                       type="note"
                       sortOrder="30"
                       showInDefault="0"
                       showInWebsite="0"
                       showInStore="1">
                    <label>Next Iteration</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\Panel\CronField</frontend_model>
                </field>
                <field id="last_feed_name"
                       translate="label"
                       type="note"
                       sortOrder="35"
                       showInDefault="0"
                       showInWebsite="0"
                       showInStore="1">
                    <label>Last generated feed</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\Panel\CronField</frontend_model>
                </field>
                <field id="last_files"
                       translate="label"
                       type="note"
                       sortOrder="35"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="0">
                    <label>Last generated feeds</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\Panel\CronFiles</frontend_model>
                </field>
                <field id="error_stack"
                       translate="label"
                       type="note"
                       sortOrder="40"
                       showInDefault="0"
                       showInWebsite="0"
                       showInStore="1">
                    <label>Errors</label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\Panel\CronField</frontend_model>
                </field>

                <field id="view_log"
                       translate="button_label"
                       type="note"
                       sortOrder="45"
                       showInDefault="1"
                       showInWebsite="0"
                       showInStore="1">
                    <button_label>View Log</button_label>
                    <frontend_model>Doofinder\Feed\Block\Adminhtml\System\Config\Panel\ViewLogButton</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config>
